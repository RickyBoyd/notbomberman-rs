    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "program": "${workspaceFolder}/target/debug/amethyst-starter-2d"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'amethyst-starter-2d'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=amethyst-starter-2d",
                    "--package=amethyst-starter-2d"
                ],
                "filter": {
                    "name": "amethyst-starter-2d",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'amethyst-starter-2d'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=amethyst-starter-2d",
                    "--package=amethyst-starter-2d"
                ],
                "filter": {
                    "name": "amethyst-starter-2d",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}